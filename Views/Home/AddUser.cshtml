@model MaterialGatePassTacker.Models.D_UserViewModel
@{
    ViewBag.Title = "AddUser";
}

<style>
    .pass{
        margin-left: 24px;
    }
    .isactive{
        margin-left: 20px;
    }
</style>
           

                <div class="row">
    @using (Html.BeginForm("AddUser", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()


                        <div class="form-horizontal">
                            
                            

                               <!-- <div class="col-md-5">

                                    Html.ActionLink("Back to Dashboard List", "Dashboard", new { id = "" }, htmlAttributes: new { class = "btn btn-default btn-primary btnnew" })
                                </div>-->
                               
                            
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="form-group" style="margin-left: 10px;">
                    <div class="col-md-2">

                        <label>UserName</label>
                        </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.d_user.User_Name, new { htmlAttributes = new { @class = "form-control", @maxlength = "20" } })
                        @Html.ValidationMessageFor(model => model.d_user.User_Name, "", new { @class = "text-danger" })

                                </div>

                            </div>
                            </div>
            <div class="row">
                <div class="form-group" style="margin-left: -13px;">
                    @Html.LabelFor(model => model.d_user.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                        @Html.EditorFor(model => model.d_user.Password, new { htmlAttributes = new { @class = "form-control pass", Type = "password", @maxlength = "20" } })
                        @Html.ValidationMessageFor(model => model.d_user.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            </div>
            <div class="row">
                <div class="form-group" style="margin-left: 10px;">
                    <div class="col-md-2">
                                <label>Email ID</label>
                                </div>
                                <div class="col-md-10">
                        @Html.EditorFor(model => model.d_user.Email_ID, new { htmlAttributes = new { @class = "form-control", Type = "email", @maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.d_user.Email_ID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            </div>
            <div class="row">
                <div class="form-group" style="margin-left: 10px;">
                    <div class="col-md-2">
                                <label>Mobile No.</label>
                                </div>
                                <div class="col-md-10">
                        @Html.EditorFor(model => model.d_user.Mobile_No, new { htmlAttributes = new { @class = "form-control", @maxlength = "10" } })
                        @Html.ValidationMessageFor(model => model.d_user.Mobile_No, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            </div>
                             <div class="row">
                <div class="form-group" style="margin-left: 10px;">
                    <div class="col-md-2">
                                <label>Role</label>
                                </div>
                                <div class="col-md-10">
                        @Html.DropDownListFor(model => model.d_user.RID, Model.Rolelist ?? new List<SelectListItem>(), "-Please select Role-", new { @class = "form-control" })

                                </div>
                            </div>
                            </div>

            <div class="row">
                <div class="form-group" style="margin-left: 10px;">
                    <div class="col-md-2">
                    @Html.LabelFor(model => model.d_user.IsActive)
                    </div>
                    @Html.CheckBoxFor(model => model.d_user.IsActive, new { htmlAttributes = new { @class = "isactive"} })
                    @Html.ValidationMessageFor(model => model.d_user.IsActive, "", new { @class = "text-danger" })

                            </div>
                            </div>

                            <br />
            <div class="row">
                            <div class="form-group">
                                <p class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add User" class="btn btn-default btn-primary" style="width: 84%;
    margin-left: -7px;
    margin-top: -27px;
    background: #007bff;" />
                                </p>
                            </div>
                            </div>


                        </div>
                    }

                </div>
